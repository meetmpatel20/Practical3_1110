<?xml version="1.0" encoding="utf-8"?>
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:viewBindingIgnore="false">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            android:layout_height="?attr/actionBarSize"
            app:title="Login UI-MAD Practical_1110"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="50dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ImageView
                android:id="@+id/img"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:background="@drawable/guni_pink_logo"
                app:layout_constraintEnd_toEndOf="@+id/form"
                app:layout_constraintStart_toStartOf="@+id/form">
            </ImageView>

            <LinearLayout
                android:id="@+id/form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom"
                android:background="@drawable/box"
                app:layout_constraintTop_toBottomOf="@+id/img"
                >
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="30dp"
                android:background="@drawable/border"
                android:drawableEnd="@drawable/ic_baseline_email_24"
                android:hint="@string/email"
                android:textColorHint="@color/cardview_dark_background"
                android:paddingHorizontal="20dp"
                app:layout_constraintBottom_toTopOf="@+id/pass"
                app:layout_constraintTop_toTopOf="parent">
            </EditText>
            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="30dp"
                android:background="@drawable/border"
                android:drawableEnd="@drawable/ic_baseline_vpn_key_24"
                android:hint="@string/password"
                android:textColorHint="@color/cardview_dark_background"
                android:paddingHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/email">
            </EditText>
            <TextView
                android:id="@+id/forgotpass"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="30dp"
                android:text="Forgot password?"
                android:textColorHint="@color/cardview_dark_background"
                android:textAlignment="viewEnd"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pass">
            </TextView>
            </LinearLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="-30dp"
                android:text="Login"
                android:textSize="18dp"
                app:layout_anchorGravity="bottom|center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/form"
                app:layout_constraintTop_toBottomOf="@+id/form"
                >
            </Button>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="100dp"
                android:autoLink="all"
                android:text="don't have an account?"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/form"
                app:layout_constraintHorizontal_bias="0.18"
                app:layout_constraintStart_toStartOf="@+id/form"
                app:layout_constraintTop_toBottomOf="@+id/form">
            </TextView>

            <TextView
                android:id="@+id/link_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="@string/sign_up"
                android:textColor="#DB3D91"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/form"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:focusable="true">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:layout_above="@id/bottom_navigation"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        android:layout_gravity="bottom"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>